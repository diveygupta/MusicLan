<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wall13"
    tools:context=".Search" >

    <TextView
        android:id="@+id/text_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:text="Search Peers"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_search_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_search_song"
        android:layout_below="@+id/edit_search_song"
        android:text="Search Song"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/btn_search_peer"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_alignLeft="@+id/text_peer"
        android:layout_below="@+id/text_peer"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/icon1" />

    <EditText
        android:id="@+id/edit_search_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_peer"
        android:layout_below="@+id/btn_search_peer"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="Enter Song Name"
        android:textColor="@android:color/holo_blue_bright" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_search_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_search_artist"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:text="Search Artist"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_search_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_search_artist"
        android:layout_alignLeft="@+id/btn_search_song"
        android:ems="10"
        android:hint="Enter Artist Name"
        android:textColor="@android:color/holo_blue_bright" />

</RelativeLayout>
