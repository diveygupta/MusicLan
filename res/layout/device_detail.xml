<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wall17"
    android:visibility="gone">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_peer_button"
                android:textColor="#ff000000" />
            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnect_peer_button"
                android:textColor="#ff000000" />
            <Button
                android:id="@+id/btn_start_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_file_button"
                android:visibility="gone" />
            <Button
                android:id="@+id/btn_get_song_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List"
                android:visibility="visible"
                android:textColor="#ff000000"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/device_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/group_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/group_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <Button
                android:id="@+id/btn_peer_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"  
                android:visibility="gone"
                        /> 
         <TextView
            android:id="@+id/rcv_chat_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:hint="Rcv Msgs Here"
            android:visibility="gone"
            android:textColor="#ff000000"
     	    android:textSize="20sp"/>
        <EditText
            android:id="@+id/send_chat_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" 
            android:visibility="gone"
            android:textColor="#ff000000"
            android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_send_chat_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Chat"
                android:visibility="gone" 
                android:background="@android:color/transparent"
       			android:textColor="#ff000000"/> 
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/status_bar"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_height="37dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/background_light"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/status_text">
        </TextView>
    </LinearLayout>
</FrameLayout>